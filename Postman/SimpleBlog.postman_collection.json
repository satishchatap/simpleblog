		{
			"name": "Get Microservice Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "03a266c2-a608-4f77-9809-c71760d85763",
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Check access_token\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.access_token).not.equal(null)\r",
							"    pm.environment.set(\"jwttoken\", jsonData.access_token);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
